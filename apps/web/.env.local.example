# FastAPI backend URL — override in production
NEXT_PUBLIC_API_URL=http://localhost:8000

# Clerk Auth — https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
CLERK_WEBHOOK_SECRET=whsec_...

# Clerk routing — must match your app's sign-in/sign-up pages
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/app
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/app

# Supabase — https://supabase.com/dashboard
SUPABASE_URL=https://xxx.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Upstash Redis — optional (IP rate limiting in middleware)
UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# Sentry — optional (error tracking)
NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/1
SENTRY_DSN=https://...@sentry.io/1

# PostHog — optional (product analytics)
NEXT_PUBLIC_POSTHOG_KEY=phc_...
